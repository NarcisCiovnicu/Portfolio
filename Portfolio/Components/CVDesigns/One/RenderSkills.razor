<RenderSection Title="SKILLS">
    <MudContainer Class="d-flex justify-content-around flex-wrap">
        @{
            bool isNotFirst = false;
            foreach (Skill skill in Skills)
            {
                if (isNotFirst)
                {
                    <MudText Class="mx-1">•</MudText>
                }
                <MudText>@skill.Name</MudText>
                isNotFirst = true;
            }
        }
    </MudContainer>
</RenderSection>
