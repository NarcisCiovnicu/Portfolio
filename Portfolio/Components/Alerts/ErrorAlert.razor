<MudAlert Class="@Class" Severity="Severity.Error" ContentAlignment="HorizontalAlignment.Start"
          CloseIcon="@CloseIcon" ShowCloseIcon="OnCloseEvent.HasDelegate" CloseIconClicked="OnCloseEvent">
    <MudText>@Error.Title</MudText>
    <MudText>@Error.Detail</MudText>
    @if (Error.Status != 0)
    {
        <MudText> (Status Code: @Error.Status) </MudText>
    }
    @if (Error.Type is not null && Error.Type != "about:blank")
    {
        <MudLink Href="@Error.Type" Target="_blank"> More details </MudLink>
    }
</MudAlert>
